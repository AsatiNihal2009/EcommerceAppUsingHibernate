<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class
		name="com.ecommerce.model.EProduct"
		table="EProduct">

		<id name="p_id" type="int" column="p_id">
			<generator class="increment"></generator>
		</id>
		<property name="name" type="string" column="name"></property>
		<property name="price"  type="double" column="price"></property>
		<property name="creating_date"  type="timestamp" column="creating_date"></property>
		<property name="expiry_date"  type="timestamp" column="expiry_date"></property>

	</class>

</hibernate-mapping>